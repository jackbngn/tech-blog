{{#each posts as |post|}}
	<div class='post'>
		<div class='content'>
			<h2><a href='/post/{{post.id}}'>{{title}}</a></h2>
			<p>{{content}}</p>
		</div>
		<div class='author'>
			<p>Posted by {{user.username}}</p>
		</div>
		<div class='comments'>
			<p>{{comments.length}} </p>
		</div>
	</div>
{{/each}}