<div class='blog'>
	<div class='content'>
		<h2>{{posts.title}}</h2>
		<p>{{posts.content}}</p>
	</div>
	<div class='author'>
		<p>Posted by {{posts.user.username}} on {{format_date posts.date_created}}</p>
	</div>
</div>

{{#if logged_in}}
	<div class='comment-form'>
		<form id='comment'>
			<label for='comment-text'>Comment:</label>
			<input type='text' id='comment-text' name='comment-text' />
			<button id='comment-submit' type='submit'>Submit</button>
		</form>
	</div>
{{/if}}

<div class='comments-container'>
	<h2>Comments</h2>
	{{#each posts.comments}}
		<div class='comment'>
			{{#if ../logged_in}}
				<div class='comment-controls'>
					<button class='delete-comment' data-href='{{this.id}}'><span class='delete-icon'>x</span></button>
				</div>
			{{/if}}
			<p>{{this.comment_text}}</p>
			<p>Posted by {{this.user.username}} on {{format_date this.date_created}}</p>
		</div>
	{{/each}}
</div>

<script src='/js/comment.js'></script>
