<div class='blog'>
	<div class='content'>
		<h2>{{posts.title}}</h2>
		<p>{{posts.content}}</p>
	</div>
	<div class='author'>
		<p>Posted by
			{{posts.user.username}}
			on
			{{format_date posts.date_created}}</p>
	</div>
</div>
<div class='comment-form'>
	<form id='comment'>
		<label for='comment-text'>Comment:</label>
		<input type='text' id='comment-text' name='comment-text' />
		<button id='comment-submit' type='submit'>Submit</button>
	</form>
</div>
<div class='comments-container'>
	{{#each comment}}
		<div class='comment'>
			<p>{{comment}}</p>
			<p>Posted by
				{{this.user.username}}
				on
				{{format_date this.date_created}}</p>
		</div>
	{{/each}}
</div>